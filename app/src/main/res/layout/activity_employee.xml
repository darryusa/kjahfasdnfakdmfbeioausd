<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  tools:context="com.onesol.pointofsale.employeeActivity"
  android:background="@drawable/bamboobackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="1174dp"
            android:layout_height="90dp"
            android:weightSum="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bamboo Nail &amp; Spa Employees"
                android:id="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_alignTop="@+id/textClock"
                android:layout_gravity="center" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textClock"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right|top" />

            <SearchView
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:id="@+id/searchViewEmployee"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textView"
                android:layout_alignParentBottom="true"
                android:layout_gravity="left|center_vertical" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_weight="0.37"
            android:layout_gravity="center">


          <ListView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_gravity="left|top" />

          <LinearLayout
            android:orientation="vertical"
            android:layout_width="59dp"
            android:layout_height="match_parent"></LinearLayout>

          <LinearLayout
            android:orientation="vertical"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/imgProfilePicture"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:background="@drawable/profile_pic_bg"
              android:onClick="onClickProfilePicture"
              app:border_color="@android:color/white"
              app:border_width="3dp" />
          </LinearLayout>

          <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:weightSum="1">

            <TableLayout
              android:layout_width="695dp"
              android:layout_height="wrap_content"
              android:stretchColumns="*"
              android:layout_gravity="center_horizontal">

              <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="New Text"
                  android:id="@+id/textView6" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="New Text"
                  android:id="@+id/textView7" />
              </TableRow>

              <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="New Text"
                  android:id="@+id/textView8" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="New Text"
                  android:id="@+id/textView9" />
              </TableRow>

              <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>
            </TableLayout>

          </LinearLayout>

        </LinearLayout>

      <LinearLayout
            android:layout_width="1180dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="bottom|center_horizontal"
            android:layout_weight="0.28">

            <Button
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:text="Add"
                android:id="@+id/addButton"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0" />

            <Button
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:text="Remove"
                android:id="@+id/removeButton"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0" />

            <Button
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:text="Edit"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"

                android:id="@+id/editButton"
                android:layout_gravity="center_vertical"
                android:layout_weight="0" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
